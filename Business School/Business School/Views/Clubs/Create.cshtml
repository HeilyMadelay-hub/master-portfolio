@model Business_School.ViewModels.Club.ClubCreateVM
@{
    ViewData["Title"] = "Crear Club";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-black text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-people"></i> Crear Nuevo Club
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Nombre del Club -->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Nombre</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-award"></i>
                                </span>
                                <input asp-for="Name" class="form-control" placeholder="Ej: Club de Marketing, Sociedad Financiera" autofocus />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Descripcion</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-card-text"></i>
                                </span>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe la misión del club, actividades y objetivos..."></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        


                            @if (!User.IsInRole("DepartmentManager"))
                            {
                                <div class="mb-3">
                                    <label asp-for="DepartmentId" class="form-label">Departamento</label>
                                    <select asp-for="DepartmentId"
                                            asp-items="Model.Departments"
                                            class="form-select">
                                        <option value="">-- Selecciona un departamento --</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            }
                            else
                            {
                                <input type="hidden" asp-for="DepartmentId" />
                            }

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                            {
                                <a href="@Model.ReturnUrl" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancelar
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Clubs" asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancelar
                                </a>
                            }

                            
                                @if (!User.IsInRole("DepartmentManager"))

                                {

                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-circle"></i> Crear Club
                                    </button>

                                }
                                else
                                {

<form asp-controller="Dashboard" asp-action="DepartmentManager" method="get" class="d-inline">
    <input type="hidden" name="returnUrl" value="@Url.Action("DepartmentManager", "Dashboard")" />
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-circle"></i> Crear Club
    </button>
</form>


                                }
                            </div>
                    </form>
                </div>
            </div>

         
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
