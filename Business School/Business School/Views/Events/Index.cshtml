@model IEnumerable<Business_School.ViewModels.Event.EventListVM>
@{
    ViewData["Title"] = "Eventos";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-calendar-event"></i> Eventos Académicos</h2>
        </div>

        @if (!User.IsInRole("Admin") && !User.IsInRole("DepartmentManager"))
        {
            <div class="col-md-6 text-end">
              

                @if (User.IsInRole("Admin") || User.IsInRole("ClubLeader"))
                {
                    <a asp-action="Create" class="btn btn-success me-2">
                        <i class="bi bi-plus-circle"></i> Crear Evento
                    </a>
                }

               
            </div>
        }
    </div>

    <!-- Tabla de eventos -->
    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Título</th>
                                <th>Fecha</th>
                                <th>Departamento</th>
                                <th>Clubs</th>
                                <th class="text-center">Registrados</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evt in Model)
                            {
                                <tr>
                                    <td>@evt.Title</td>
                                    <td>@evt.StartDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@(string.IsNullOrEmpty(evt.DepartmentName) ? "-" : evt.DepartmentName)</td>
                                    <td>@(evt.Clubs != null && evt.Clubs.Any() ? string.Join(", ", evt.Clubs.Take(2)) + (evt.Clubs.Count() > 2 ? "..." : "") : "-")</td>
                                    <td class="text-center">@evt.RegisteredCount</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@evt.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm text-center py-5">
            <h4>No hay eventos disponibles</h4>
            @if (User.IsInRole("Admin") || User.IsInRole("DepartmentManager") || User.IsInRole("ClubLeader"))
            {
                <a asp-action="Create" class="btn btn-success mt-3">
                    <i class="bi bi-plus-circle"></i> Crear Primer Evento
                </a>
            }
        </div>
    }
</div>
