@model Business_School.ViewModels.Event.EventFormVM

@{
    ViewData["Title"] = "Crear Evento";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var defaultStartDate = DateTime.Now
        .AddDays(1)
        .Date
        .AddHours(10)
        .ToString("yyyy-MM-ddTHH:mm");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Crear Evento</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">

                        @if (!string.IsNullOrWhiteSpace(returnUrl))
                        {
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                        }

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate"
                                   type="datetime-local"
                                   class="form-control"
                                   value="@defaultStartDate" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        @if (!User.IsInRole("DepartmentManager"))
                        {
                            <div class="mb-3">
                                <label asp-for="DepartmentId" class="form-label">Departamento</label>
                                <select asp-for="DepartmentId"
                                        asp-items="Model.Departments"
                                        class="form-select">
                                    <option value="">-- Selecciona un departamento --</option>
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="DepartmentId" />
                        }

                       

                        <div class="mb-3">
                            <label class="form-label">Clubs</label>
                            <div class="border rounded p-3">

                                @foreach (var club in Model.Clubs)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="SelectedClubIds"
                                               value="@club.Value"
                                               id="club_@club.Value" />
                                        <label class="form-check-label"
                                               for="club_@club.Value">
                                            @club.Text
                                        </label>
                                    </div>
                                }

                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MaxCapacity" class="form-label">
                                Aforo Máximo <span class="text-muted">(opcional)</span>
                            </label>
                            <input asp-for="MaxCapacity" class="form-control" />
                            <span asp-validation-for="MaxCapacity" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success">
                                Guardar
                            </button>

                            @if (!string.IsNullOrWhiteSpace(returnUrl))
                            {
                                <a class="btn btn-outline-secondary" href="@returnUrl">
                                    Cancelar
                                </a>
                            }
                            else
                            {
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    Cancelar
                                </a>
                            }



                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
