@model Business_School.ViewModels.Admin.AssignClubLeaderVM
@{
 ViewData["Title"] = "Asignar Club Leader";
}
<h2>Asignar Club Leader</h2>
<form asp-action="AssignClubLeader" method="post">
 <div class="mb-3">
 <label class="form-label">Usuario</label>
 <select name="userId" class="form-select">
 @foreach (var u in Model.Users) { <option value="@u.Value">@u.Text</option> }
 </select>
 </div>
 <div class="mb-3">
 <label class="form-label">Club</label>
 <select name="clubId" class="form-select">
 @foreach (var c in Model.Clubs) { <option value="@c.Value">@c.Text</option> }
 </select>
 </div>
 <button type="submit" class="btn btn-primary">Guardar</button>
 <a asp-action="Users" class="btn btn-secondary">Cancelar</a>
</form>
