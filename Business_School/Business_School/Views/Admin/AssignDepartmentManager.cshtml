@model Business_School.ViewModels.Admin.AssignDepartmentManagerVM
@{
 ViewData["Title"] = "Asignar Department Manager";
}
<h2>Asignar Department Manager</h2>
<form asp-action="AssignDepartmentManager" method="post">
 <div class="mb-3">
 <label class="form-label">Usuario</label>
 <select name="userId" class="form-select">
 @foreach (var u in Model.Users) { <option value="@u.Value">@u.Text</option> }
 </select>
 </div>
 <div class="mb-3">
 <label class="form-label">Departamento</label>
 <select name="departmentId" class="form-select">
 @foreach (var d in Model.Departments) { <option value="@d.Value">@d.Text</option> }
 </select>
 </div>
 <button type="submit" class="btn btn-primary">Guardar</button>
 <a asp-action="Users" class="btn btn-secondary">Cancelar</a>
</form>