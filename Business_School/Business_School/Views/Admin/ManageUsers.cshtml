@model IEnumerable<Business_School.ViewModels.Admin.UserListVM>
@using Business_School.Helpers
@{
    ViewData["Title"] = "Gestionar Usuarios y Roles";
    var departments = ViewData["Departments"] as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    var clubs = ViewData["Clubs"] as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    var eligibleForManager = ViewData["EligibleForManager"] as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    var eligibleForClubLeader = ViewData["EligibleForClubLeader"] as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    var allRoles = ViewData["AllRoles"] as string[] ?? Array.Empty<string>();
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>
                <i class="bi bi-people-fill text-primary"></i> Gestionar Usuarios y Roles
            </h2>
            <p class="text-muted">
                Administra los roles de los usuarios, asigna managers de departamento y líderes de clubs.
            </p>
        </div>
        <div class="col-md-4 text-end">
            @if (!string.IsNullOrEmpty(returnUrl))
            {
                <a href="@returnUrl" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            }
            else
            {
                <a asp-action="Admin" asp-controller="Dashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al Dashboard
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Resumen rápido -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count()</h4>
                    <small>Usuarios Totales</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count(u => u.Roles.Contains(RoleHelper.Admin))</h4>
                    <small>Administradores</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h4>@Model.Count(u => u.Roles.Contains(RoleHelper.DepartmentManager))</h4>
                    <small>Managers</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count(u => u.Roles.Contains(RoleHelper.ClubLeader))</h4>
                    <small>Líderes de Club</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones rápidas -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            <i class="bi bi-lightning-fill"></i> Acciones Rápidas
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <h6><i class="bi bi-building"></i> Asignar Manager de Departamento</h6>
                    <p class="text-muted small mb-2">Solo usuarios elegibles (excluyendo administradores)</p>
                    <form asp-action="SetDepartmentManager" method="post" class="row g-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@Url.Action("ManageUsers", "Admin")" />
                        <div class="col-md-5">
                            <select name="userId" class="form-select form-select-sm" required>
                                <option value="">-- Seleccionar Usuario --</option>
                                @foreach (var user in eligibleForManager)
                                {
                                    <option value="@user.Value">@user.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-5">
                            <select name="departmentId" class="form-select form-select-sm" required>
                                <option value="">-- Seleccionar Departamento --</option>
                                @foreach (var dep in departments)
                                {
                                    <option value="@dep.Value">@dep.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-warning btn-sm w-100">Asignar</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <h6><i class="bi bi-people"></i> Asignar Líder de Club</h6>
                    <p class="text-muted small mb-2">Solo usuarios elegibles (excluyendo administradores)</p>
                    <form asp-action="SetClubLeader" method="post" class="row g-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@Url.Action("ManageUsers", "Admin")" />
                        <div class="col-md-5">
                            <select name="userId" class="form-select form-select-sm" required>
                                <option value="">-- Seleccionar Usuario --</option>
                                @foreach (var user in eligibleForClubLeader)
                                {
                                    <option value="@user.Value">@user.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-5">
                            <select name="clubId" class="form-select form-select-sm" required>
                                <option value="">-- Seleccionar Club --</option>
                                @foreach (var club in clubs)
                                {
                                    <option value="@club.Value">@club.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-info btn-sm w-100">Asignar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de usuarios -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <span><i class="bi bi-table"></i> Lista de Usuarios</span>
            <input type="text" id="searchInput" class="form-control form-control-sm w-25" placeholder="Buscar usuario...">
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0" id="usersTable">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Departamento</th>
                            <th>Roles Actuales</th>
                            <th>Gestionar Roles</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td><strong>@user.FullName</strong></td>
                                <td>@user.Email</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.DepartmentName))
                                    {
                                        <span class="badge bg-secondary">@user.DepartmentName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        var badgeClass = role switch
                                        {
                                            RoleHelper.Admin => "bg-danger",
                                            RoleHelper.DepartmentManager => "bg-warning text-dark",
                                            RoleHelper.ClubLeader => "bg-info",
                                            RoleHelper.Student => "bg-success",
                                            _ => "bg-secondary"
                                        };
                                        <span class="badge @badgeClass me-1">@role</span>
                                    }
                                    @if (!user.Roles.Any())
                                    {
                                        <span class="text-muted">Sin roles</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="UpdateUserRoles" method="post" class="d-flex gap-1 flex-wrap align-items-center">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <input type="hidden" name="returnUrl" value="@Url.Action("ManageUsers", "Admin")" />
                                        @foreach (var role in allRoles)
                                        {
                                            var isChecked = user.Roles.Contains(role);
                                            var checkId = $"role_{user.Id}_{role}";
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="roles"
                                                       value="@role" id="@checkId" @(isChecked ? "checked" : "")>
                                                <label class="form-check-label small" for="@checkId">@role</label>
                                            </div>
                                        }
                                        <button type="submit" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-save"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form asp-action="DeleteUser" method="post" class="d-inline"
                                          onsubmit="return confirm('¿Eliminar usuario @user.FullName? Esta acción no se puede deshacer.');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                title="Eliminar usuario" @(user.Roles.Contains(RoleHelper.Admin) ? "disabled" : "")>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Leyenda de roles -->
    <div class="mt-4">
        <h6>Leyenda de Roles:</h6>
        <div class="d-flex gap-3 flex-wrap">
            <span><span class="badge bg-danger">Admin</span> - Gestión completa de la aplicación</span>
            <span><span class="badge bg-warning text-dark">DepartmentManager</span> - Gestiona departamentos y sus recursos</span>
            <span><span class="badge bg-info">ClubLeader</span> - Gestiona un club específico</span>
            <span><span class="badge bg-success">Student</span> - Estudiante, puede unirse a clubs y eventos</span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
               // Filtro de búsqueda simple
               document.getElementById('searchInput').addEventListener('keyup', function() {
              const filter = this.value.toLowerCase();
                   const rows = document.querySelectorAll('#usersTable tbody tr');
               rows.forEach(row => {
            const text = row.textContent.toLowerCase();
        row.style.display = text.includes(filter) ? '' : 'none';
        });
           });
    </script>
}
