@model Business_School.ViewModels.Admin.AssignRoleVM
@{
 ViewData["Title"] = "Asignar Roles";
}
<h2>Asignar Roles a @Model.Email</h2>
<form asp-action="AssignRole" method="post">
 <input type="hidden" name="userId" value="@Model.UserId" />
 <div class="mb-3">
 @foreach (var role in Model.AvailableRoles)
 {
 <div class="form-check">
 <input class="form-check-input" type="checkbox" name="roles" value="@role" id="r_@role" @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
 <label class="form-check-label" for="r_@role">@role</label>
 </div>
 }
 </div>
 <button type="submit" class="btn btn-primary">Guardar</button>
 <a asp-action="Users" class="btn btn-secondary">Cancelar</a>
</form>