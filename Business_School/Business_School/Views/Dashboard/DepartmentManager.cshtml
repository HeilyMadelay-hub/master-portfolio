@model Business_School.ViewModels.Dashboard.DashboardDepartmentManagerVM
@{
    ViewData["Title"] = "Dashboard - Control del Departamento";
}

<div class="container-fluid py-4">
    @if (string.IsNullOrEmpty(Model.DepartmentName))
    {
        <div class="alert alert-warning shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Atención:</strong> No tienes un departamento asignado.
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="row mb-4">
            <div class="col">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-1">
                            <i class="bi bi-building text-primary"></i>
                            Control del Departamento
                        </h2>
                        <p class="text-muted mb-0">Gestión integral de @Model.DepartmentName</p>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- A. Tarjeta con datos del Departamento -->
        <div class="card shadow-sm mb-4 border-0">
            <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Información del Departamento
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start mb-3">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                    <i class="bi bi-building text-primary fs-4"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Nombre</h6>
                                <p class="mb-0 fw-semibold">@Model.DepartmentName</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                    <i class="bi bi-envelope text-success fs-4"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Email</h6>
                                <p class="mb-0 fw-semibold">@Model.DepartmentEmail</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start mb-3">
                            <div class="flex-shrink-0">
                                <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                    <i class="bi bi-telephone text-warning fs-4"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Teléfono</h6>
                                <p class="mb-0 fw-semibold">@Model.DepartmentPhone</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                    <i class="bi bi-geo-alt text-info fs-4"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Ubicación</h6>
                                <p class="mb-0 fw-semibold">@Model.DepartmentOfficeLocation</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4 pt-3 border-top">
                    <a class="btn btn-primary"
                       href="@Url.Action("Edit", "Departments", new { id = Model.DepartmentId, returnUrl = Url.Action("DepartmentManager", "Dashboard") })">
                        <i class="bi bi-pencil-square me-2"></i>Editar Departamento
                    </a>
                </div>
            </div>
        </div>

        <!-- B. KPIs del Departamento -->
        <div class="row g-4 mb-4">
            <div class="col-12">
                <h4 class="mb-3">
                    <i class="bi bi-graph-up text-primary"></i>
                    Estadísticas Generales
                </h4>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm border-0 h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3">
                                <i class="bi bi-people-fill text-success" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                        <h6 class="text-muted text-uppercase mb-2" style="letter-spacing: 1px; font-size: 0.75rem;">Total Clubs</h6>
                        <h2 class="mb-0 fw-bold text-success">@Model.TotalClubs</h2>
                        <div class="progress mt-3" style="height: 4px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm border-0 h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3">
                                <i class="bi bi-person-badge text-primary" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                        <h6 class="text-muted text-uppercase mb-2" style="letter-spacing: 1px; font-size: 0.75rem;">Estudiantes</h6>
                        <h2 class="mb-0 fw-bold text-primary">@Model.TotalStudents</h2>
                        <div class="progress mt-3" style="height: 4px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm border-0 h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex p-3">
                                <i class="bi bi-calendar-event text-warning" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                        <h6 class="text-muted text-uppercase mb-2" style="letter-spacing: 1px; font-size: 0.75rem;">Total Eventos</h6>
                        <h2 class="mb-0 fw-bold text-warning">@Model.TotalEvents</h2>
                        <div class="progress mt-3" style="height: 4px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- C. Lista de Clubs del Departamento -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white border-bottom py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-collection text-success me-2"></i>
                        Clubs del Departamento
                    </h5>
                    <a class="btn btn-success btn-sm"
                       href="@Url.Action("Create", "Clubs", new { returnUrl = Url.Action("DepartmentManager", "Dashboard") })">
                        <i class="bi bi-plus-circle me-1"></i> Crear Club
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4"><i class="bi bi-tag me-2"></i>Nombre</th>
                                <th><i class="bi bi-person me-2"></i>Líder</th>
                                <th class="text-center"><i class="bi bi-people me-2"></i>Estudiantes</th>
                                <th class="text-center pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Clubs.Any())
                            {
                                @foreach (var club in Model.Clubs)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                                                    <i class="bi bi-collection text-success"></i>
                                                </div>
                                                <span class="fw-semibold">@club.Name</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-muted">@club.LeaderName</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info bg-opacity-75 px-3 py-2">@club.StudentCount</span>
                                        </td>
                                        <td class="text-center pe-4">
                                           <a href="@Url.Action(
                                                    "Details",
                                                    "Clubs",
                                                    new {
                                                        id = club.Id,
                                                        returnUrl = Url.Action("DepartmentManager", "Dashboard")
                                                    })"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-gear me-1"></i> Ver Detalles
                                            </a>

                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-5">
                                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                        <p class="mb-0">No hay clubs en este departamento.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- D. Lista de Estudiantes del Departamento -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white border-bottom py-3">
                <h5 class="mb-0">
                    <i class="bi bi-mortarboard text-primary me-2"></i>
                    Estudiantes del Departamento
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4"><i class="bi bi-person me-2"></i>Nombre</th>
                                <th><i class="bi bi-envelope me-2"></i>Email</th>
                                <th><i class="bi bi-collection me-2"></i>Clubs</th>
                                <th class="text-center"><i class="bi bi-star me-2"></i>Puntos</th>
                                <th class="text-center pe-4"><i class="bi bi-bar-chart me-2"></i>Nivel</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Students.Any())
                            {
                                @foreach (var student in Model.Students)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                                    <i class="bi bi-person-fill text-primary"></i>
                                                </div>
                                                <span class="fw-semibold">@student.FullName</span>
                                            </div>
                                        </td>
                                        <td class="text-muted">@student.Email</td>
                                        <td>
                                            @if (student.Clubs.Any())
                                            {
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var clubName in student.Clubs)
                                                    {
                                                        <span class="badge bg-secondary bg-opacity-75">@clubName</span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Sin clubs</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-warning text-dark px-3 py-2">
                                                <i class="bi bi-star-fill me-1"></i>@student.Points pts
                                            </span>
                                        </td>
                                        <td class="text-center pe-4">
                                            @{
                                                var levelClass = student.Level switch
                                                {
                                                    Business_School.Models.StudentLevel.Principiante => "bg-secondary",
                                                    Business_School.Models.StudentLevel.Intermedio => "bg-info",
                                                    Business_School.Models.StudentLevel.Avanzado => "bg-primary",
                                                    Business_School.Models.StudentLevel.Experto => "bg-success",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @levelClass px-3 py-2">@student.Level</span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-5">
                                        <i class="bi bi-people fs-1 d-block mb-2"></i>
                                        <p class="mb-0">No hay estudiantes en este departamento.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- E. Eventos del Departamento -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white border-bottom py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar3 text-warning me-2"></i>
                        Eventos del Departamento
                    </h5>
                    <a href="@Url.Action("Create", "Events", new { departmentId = Model.DepartmentId })"
                       class="btn btn-warning btn-sm">
                        <i class="bi bi-plus-circle me-1"></i> Crear Evento
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Título</th>
                                <th>Fecha</th>
                                <th>Departamento</th>
                                <th>Clubs</th>
                                <th class="text-center">Aforo</th>
                                <th class="text-center">Inscritos</th>
                                <th class="text-center">Estado</th>
                                <th class="text-center pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Events.Any())
                            {
                                @foreach (var ev in Model.Events)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                                                    <i class="bi bi-calendar-event text-warning"></i>
                                                </div>
                                                <span class="fw-semibold">@ev.Title</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <div class="fw-semibold">@ev.StartDate.ToString("dd/MM/yyyy")</div>
                                                <small class="text-muted">
                                                    <i class="bi bi-clock me-1"></i>@ev.StartDate.ToString("HH:mm")
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary bg-opacity-25 text-dark px-3 py-2">
                                                @ev.DepartmentName
                                            </span>
                                        </td>
                                        <td>
                                            @if (ev.ClubNames.Any())
                                            {
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var club in ev.ClubNames)
                                                    {
                                                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary px-2 py-1">
                                                            <i class="bi bi-collection me-1"></i>@club
                                                        </span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Sin clubs</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (ev.Capacity.HasValue)
                                            {
                                                <span class="badge bg-light text-dark border px-3 py-2">
                                                    <i class="bi bi-people me-1"></i>@ev.Capacity.Value
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-light text-muted border px-3 py-2">
                                                    <i class="bi bi-infinity"></i>
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info px-3 py-2">
                                                <i class="bi bi-person-check me-1"></i>@ev.RegisteredCount
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            @{
                                                var statusClass = ev.Status switch
                                                {
                                                    "Abierto" => "bg-success",
                                                    "Lleno" => "bg-warning text-dark",
                                                    "Cerrado" => "bg-secondary",
                                                    "En curso" => "bg-primary",
                                                    _ => "bg-secondary"
                                                };
                                                var statusIcon = ev.Status switch
                                                {
                                                    "Abierto" => "bi-check-circle",
                                                    "Lleno" => "bi-exclamation-circle",
                                                    "Cerrado" => "bi-x-circle",
                                                    "En curso" => "bi-play-circle",
                                                    _ => "bi-circle"
                                                };
                                            }
                                            <span class="badge @statusClass px-3 py-2">
                                                <i class="bi @statusIcon me-1"></i>@ev.Status
                                            </span>
                                        </td>
                                        <td class="text-center pe-4">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="@Url.Action("Edit", "Events", new { id = ev.Id })"
                                                   class="btn btn-outline-primary"
                                                   data-bs-toggle="tooltip"
                                                   title="Editar evento">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-5">
                                        <i class="bi bi-calendar-x fs-1 d-block mb-3"></i>
                                        <p class="mb-0 fw-semibold">No hay eventos en este departamento.</p>
                                        <small class="text-muted">Crea tu primer evento haciendo clic en el botón de arriba</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-lift {
        transition: all 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .table tbody tr {
        transition: background-color 0.2s ease;
    }

    .card {
        transition: all 0.3s ease;
    }
</style>