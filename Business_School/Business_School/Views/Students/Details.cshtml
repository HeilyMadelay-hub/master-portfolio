@model Business_School.ViewModels.Students.StudentDetailsVM

@{
    ViewData["Title"] = "Detalles del Estudiante";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row g-4">
    <!-- Información básica del estudiante -->
    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h4 class="card-title mb-3">@Model.FullName</h4>
                <p><i class="bi bi-envelope me-2"></i>@Model.Email</p>
                <p>
                    <strong>Puntos:</strong>
                    <span class="badge bg-success">@Model.Points</span>
                </p>
                <p>
                    <strong>Nivel:</strong>
                    <span class="badge bg-primary">@Model.Level</span>
                </p>
            </div>
        </div>
    </div>

    <!-- Clubs -->
    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title mb-3">Clubs</h5>
                @if (Model.Clubs.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var club in Model.Clubs)
                        {
                            <li class="list-group-item d-flex align-items-center">
                                <i class="bi bi-people-fill me-2 text-primary"></i>
                                @club
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted fst-italic">Este estudiante no pertenece a ningún club.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Eventos -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">Eventos</h5>
                @if (Model.Events.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Fecha</th>
                                    <th>Asistió</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ev in Model.Events)
                                {
                                    <tr>
                                        <td>@ev.Name</td>
                                        <td>@ev.Date:dd/MM/yyyy</td>
                                        <td>
                                            <span class="badge @(ev.Attended ? "bg-success" : "bg-secondary")">
                                                @(ev.Attended ? "Sí" : "No")
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted fst-italic">No ha participado en eventos.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Logros -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">Logros</h5>
                @if (Model.Achievements.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Título</th>
                                    <th>Descripción</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ach in Model.Achievements)
                                {
                                    <tr>
                                        <td>@ach.Title</td>
                                        <td>@ach.Description</td>
                                        <td>@ach.DateEarned:dd/MM/yyyy</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted fst-italic">No tiene logros registrados.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Botón Volver -->

<div class="mt-3"> 
    @* Ocultar el botón "Volver al Departamento" si el usuario actual es Admin *@ 
    @if (Model.DepartmentId.HasValue && !User.IsInRole("Admin")) {
        <a asp-controller="Departments" asp-action="Details" 
        asp-route-id="@Model.DepartmentId" class="btn btn-outline-secondary"> 

        <i class="bi bi-arrow-left-circle me-1"></i> Volver al Departamento </a>
    }
 </div>