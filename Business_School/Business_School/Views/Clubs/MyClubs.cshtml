@model IEnumerable<Business_School.ViewModels.Club.StudentClubVM>
@{
    ViewData["Title"] = "Mis Clubs";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>
                <i class="bi bi-people-fill"></i> Mis Clubs
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Clubs" asp-action="Index" class="btn btn-outline-primary me-2">
                <i class="bi bi-search"></i> Explorar Todos los Clubs
            </a>
            <a asp-controller="Dashboard" asp-action="Student" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Volver al Dashboard
            </a>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                </button>
            </form>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #6c757d;"></i>
                <h4 class="mt-3">Aún no te has unido a ningún club</h4>
                <p class="text-muted">¡Explora los clubs disponibles y únete para ganar puntos y participar en eventos!</p>
                <a asp-controller="Clubs" asp-action="Index" class="btn btn-primary mt-3">
                    <i class="bi bi-search"></i> Explorar Clubs
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var membership in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">@membership.ClubName</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                @if (!string.IsNullOrEmpty(membership.Description))
                                {
                                    @(membership.Description.Length > 100
                                    ? membership.Description.Substring(0, 100) + "..."
                                    : membership.Description)
                                }
                                else
                                {
                                    <em class="text-muted">Sin descripción</em>
                                }
                            </p>
                            <hr />
                            <div class="mb-2">
                                <i class="bi bi-building text-primary"></i>
                                <strong>Departamento:</strong>
                                <br />
                                <span class="badge bg-secondary">@membership.DepartmentName</span>
                            </div>
                            <div class="mb-2">
                                <i class="bi bi-calendar3 text-info"></i>
                                <strong>Fecha de Unión:</strong>
                                <br />
                                <small>@membership.JoinedAt.ToString("dd/MM/yyyy")</small>
                            </div>
                            <div class="mb-2">
                                <i class="bi bi-star-fill text-warning"></i>
                                <strong>Puntos Ganados:</strong>
                                <br />
                                <span class="badge bg-warning text-dark">@membership.PointsFromThisClub pts</span>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-grid gap-2">
                                <a asp-controller="Clubs" asp-action="Details" asp-route-id="@membership.ClubId"
                                    class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-eye"></i> Ver Detalles
                                </a>
                                <form asp-controller="Clubs" asp-action="LeaveClub" method="post"
                                    onsubmit="return confirm('¿Estás seguro de que quieres salir de @membership.ClubName?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="clubId" value="@membership.ClubId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                        <i class="bi bi-door-open"></i> Salir del Club
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Resumen -->
        <div class="card mt-4 shadow-sm">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h3 class="text-primary">@Model.Count()</h3>
                        <p class="text-muted mb-0">Clubs Totales</p>
                    </div>
                    <div class="col-md-4">
                        <h3 class="text-warning">@Model.Sum(m => m.PointsFromThisClub)</h3>
                        <p class="text-muted mb-0">Puntos Totales</p>
                    </div>
                    <div class="col-md-4">
                        <h3 class="text-success">@Model.Select(m => m.DepartmentName).Distinct().Count()</h3>
                        <p class="text-muted mb-0">Departamentos</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
