@model IEnumerable<Business_School.Models.Club>
@{
    ViewData["Title"] = "Clubes";
}
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>
                <i class="bi bi-people"></i> Clubes Estudiantiles
            </h2>
        </div>
        <div class="col-md-6 text-end">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo Club
                </a>
            }
           

           
            


        </div>
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var club in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">@club.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                @if (!string.IsNullOrEmpty(club.Description))
                                {
                                    @(club.Description.Length > 100
                                                            ? club.Description.Substring(0, 100) + "..."
                                                            : club.Description)
                                                }
                                else
                                {
                                    <em class="text-muted">No hay descripción disponible</em>
                                }
                            </p>
                            <hr />

                            <div class="mb-2">
                                <i class="bi bi-building text-primary"></i>
                                <strong>Departamento:</strong>
                                <a asp-controller="Departments"
                                   asp-action="Details"
                                   asp-route-id="@club.DepartmentId"
                                   class="text-decoration-none">
                                    @club.Department?.Name
                                </a>
                            </div>
                            @if (club.Leader != null)
                            {
                                <div class="mb-2">
                                    <i class="bi bi-person-badge text-info"></i>
                                    <strong>Líder:</strong>
                                    <span class="badge bg-info">@club.Leader.Email</span>
                                </div>
                            }
                            <div class="mb-2">
                                <i class="bi bi-people-fill text-success"></i>
                                <strong>Miembros:</strong>
                                <span class="badge bg-success">@club.StudentClubs.Count</span>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@club.Id"
                                   class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-eye"></i> Ver Detalles
                                </a>
                                @if (User.IsInRole("Admin") ||
                                                        User.IsInRole("DepartmentManager") ||
                                                        (User.IsInRole("ClubLeader") && club.LeaderId == int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "0")))
                                {
                                    <a asp-action="Edit" asp-route-id="@club.Id" asp-route-returnUrl="@Url.Action("Index", "Clubs")"
                                       class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@club.Id"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i>
            No se encontraron clubes. ¡Crea tu primer club para comenzar!
        </div>
    }
</div>
<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
</style>

@section Scripts {

   @*  /*
        2.	Clubs/Index.cshtml
    •	Solo para Admin:
    •	Inserto doble guard con history.pushState para capturar el primer Atrás en Index.
    •	En el popstate, hago location.replace('Url.Action("Admin", "Dashboard")').
    •	También cubro navegación desde caché de historial (pageshow back/forward) para redirigir igual.
    Resultado esperado: Index → Details → Events → Delete → vuelve a Details
    •	Atrás en Details: vas directo a Index
    •	Estando en Index, Atrás: vas directo a Dashboard/Admin
    •	Nada de pasos intermedios como Events/Delete ni Events/Details
    Nota:
    •	Si estás ejecutando en debug, usa Hot Reload o recarga dura (Ctrl+F5) para asegurarte de tener los scripts nuevos en el navegador.
    •	Si tu acción del dashboard no es Dashboard/Admin, ajusta la URL del script en Index.cshtml: var dashboardUrl = 'Url.Action("Admin", "Dashboard")'; por la ruta correcta.
    
    
    */ *@
    @if (User.IsInRole("Admin"))
    {
        <script>
            // En Clubs/Index, si el Admin pulsa Atrás, ir directamente al Dashboard/Admin
            (function () {
                var dashboardUrl = '@Url.Action("Admin", "Dashboard")';
                try {
                    // Doble guard para capturar el primer "Atrás" sin salir de esta página
                    history.pushState({ __clubsIndexGuard:1 }, '', location.href);
                    history.pushState({ __clubsIndexGuard:2 }, '', location.href);

                    window.addEventListener('popstate', function (evt) {
                        if (evt && evt.state && evt.state.__clubsIndexGuard) {
                            // Saltar directo al dashboard sin crear nueva entrada
                            location.replace(dashboardUrl);
                        }
                    }, { once: true });

                    // Si el navegador vuelve desde caché de historial, redirigir igual
                    window.addEventListener('pageshow', function (e) {
                        try {
                            var navEntries = performance.getEntriesByType && performance.getEntriesByType('navigation');
                            var navType = navEntries && navEntries[0] && navEntries[0].type;
                            if ((e && e.persisted === true) || navType === 'back_forward') {
                                location.replace(dashboardUrl);
                            }
                        } catch (_) { }
                    });
                } catch (_) { }
            })();
        </script>
    }
}