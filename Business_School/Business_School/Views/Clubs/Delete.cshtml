@model Business_School.Models.Club
@{
    ViewData["Title"] = "Eliminar Club";
}

<div class="container mt-4">

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Atención:</strong> Esta acción es irreversible.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Detalles del Club</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Nombre</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Descripción</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <th>Departamento</th>
                    <td>@Model.Department?.Name</td>
                </tr>
                <tr>
                    <th>Líder</th>
                    <td>@Model.Leader?.FullName (@Model.Leader?.Email)</td>
                </tr>
                <tr>
                    <th>Miembros asociados</th>
                    <td>@Model.StudentClubs.Count</td>
                </tr>
                <tr>
                    <th>Eventos asociados</th>
                    <td>@Model.EventClubs.Count</td>
                </tr>
            </table>
        </div>
    </div>

    @if (Model.StudentClubs.Any())
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Miembros que perderán la membresía</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var sc in Model.StudentClubs)
                    {
                        <li class="list-group-item">@sc.UserStudent?.FullName (@sc.UserStudent?.Email)</li>
                    }
                </ul>
            </div>
        </div>
    }

    @if (Model.EventClubs.Any())
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Eventos que perderán relación con este club</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var ec in Model.EventClubs)
                    {
                        <li class="list-group-item">@ec.Event?.Title (@ec.Event?.StartDate.ToString("dd/MM/yyyy"))</li>
                    }
                </ul>
            </div>
        </div>
    }

    <div class="d-flex gap-2 mt-3">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">Eliminar Club</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
    </div>
</div>

                        @section Scripts {
    <script>
        document.getElementById('deleteForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const clubName = '@Model.Name';
            const membersCount = @Model.StudentClubs.Count;
            const eventsCount = @Model.EventClubs.Count;
            
            let message = `¿Está seguro de que desea eliminar el club "${clubName}"?`;
            
            if (membersCount > 0 || eventsCount > 0) {
                message += '\n\nEsto afectará a:';
                if (membersCount > 0) {
                    message += `\n- ${membersCount} miembro(s)`;
                }
                if (eventsCount > 0) {
                    message += `\n- ${eventsCount} evento(s)`;
                }
            }
            
            message += '\n\nEsta acción no se puede deshacer.';
            
            if (confirm(message)) {
                this.submit();
            }
        });
    </script>}