@model Business_School.ViewModels.Event.EventDetailsVM
@{
    ViewData["Title"] = "Detalle del Evento";

    // backUrl: A dónde va el botón "Volver" (usa returnUrl original o Events/Index)
    var backUrl = !string.IsNullOrEmpty(Model.ReturnUrl) && Url.IsLocalUrl(Model.ReturnUrl)
        ? Model.ReturnUrl
      : Url.Action("Index", "Events");

    // editReturnUrl: A dónde debe volver después de Editar/Eliminar (siempre a esta página Details, preservando el returnUrl original)
    var editReturnUrl = !string.IsNullOrEmpty(Model.ReturnUrl) && Url.IsLocalUrl(Model.ReturnUrl)
        ? Model.ReturnUrl
     : Url.Action("Details", "Events", new { id = Model.Id });
}

<div class="container mt-4">
    <!-- Header con navegación -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>
                <i class="bi bi-calendar-event"></i> Detalle del Evento
            </h2>
        </div>

    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Información del Evento -->
    <div class="row">
        <div class="col-lg-8">
            <!-- Detalles principales -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> @Model.Title
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5><i class="bi bi-file-text"></i> Descripción</h5>
                            <p class="lead">@Model.Description</p>
                        </div>
                    }

                    <hr />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6><i class="bi bi-calendar3 text-primary"></i> Fecha y Hora</h6>
                            <p class="mb-1">
                                <strong>Inicio:</strong> @Model.StartDate.ToString("dddd, dd MMMM yyyy")
                            </p>
                            <p class="mb-0">
                                <strong>Hora:</strong> @Model.StartDate.ToString("HH:mm")
                            </p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <h6><i class="bi bi-building text-secondary"></i> Departamento</h6>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.DepartmentName))
                                {
                                    <span class="badge bg-secondary fs-6">@Model.DepartmentName</span>
                                }
                                else
                                {
                                    <span class="text-muted">No asignado</span>
                                }
                            </p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <h6><i class="bi bi-people text-info"></i> Clubs Participantes</h6>
                            <p class="mb-0">
                                @if (Model.Clubs != null && Model.Clubs.Any())
                                {
                                    @string.Join(", ", Model.Clubs)
                                }
                                else
                                {
                                    <span class="text-muted">Sin clubs asignados</span>
                                }
                            </p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <h6><i class="bi bi-door-open text-warning"></i> Capacidad</h6>
                            <p class="mb-0">
                                <strong>Máximo:</strong> @(Model.MaxCapacity == 0 ? "Sin límite" : Model.MaxCapacity.ToString())
                                <br />
                                <strong>Registrados:</strong>
                                <span class="badge @(Model.MaxCapacity > 0 && Model.RegisteredCount >= Model.MaxCapacity ? "bg-danger" : "bg-success")">
                                    @Model.RegisteredCount
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar - Registro -->
        <div class="col-lg-4">
            @if (User.IsInRole("Student"))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-check-circle"></i> Registro
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        @if (Model.IsUserRegistered)
                        {
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle-fill"></i>
                                <strong>¡Ya estás registrado!</strong>
                            </div>
                            <p class="text-muted">Nos vemos en el evento</p>
                        }
                        else if (Model.MaxCapacity > 0 && Model.RegisteredCount >= Model.MaxCapacity)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                <strong>Aforo completo</strong>
                            </div>
                            <p class="text-muted">Lo sentimos, no hay plazas disponibles</p>
                        }
                        else
                        {
                            <form asp-action="Register" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="eventId" value="@Model.Id" />
                                <input type="hidden" name="returnUrl" value="@editReturnUrl" />
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="bi bi-person-plus"></i> Registrarme
                                </button>
                            </form>
                            <small class="text-muted mt-2 d-block">
                                @if (Model.MaxCapacity > 0)
                                {
                                    <text>@(Model.MaxCapacity - Model.RegisteredCount) plazas disponibles</text>
                                }
                                else
                                {
                                    <text>Sin límite de plazas</text>
                                }
                            </small>
                        }
                    </div>
                </div>
            }

            <!-- Acciones de administración -->
            @if ((User.IsInRole("Admin") || User.IsInRole("DepartmentManager")) && !User.IsInRole("ClubLeader"))
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-gear"></i> Administración
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@editReturnUrl" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Editar Evento
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@Model.Id" asp-route-returnUrl="@editReturnUrl" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar Evento
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
</style>