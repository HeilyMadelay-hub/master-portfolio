@model Business_School.Models.ViewModels.LoginVM
@{
  
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-4">
                <h2 class="text-center mb-4">
                    <i class="bi bi-person-circle"></i> Login
                </h2>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input type="hidden" asp-for="ReturnUrl" />

                    <!-- Email -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control"
                                   placeholder="tu.email@businessschool.com"
                                   autocomplete="username" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Password" class="form-control"
                                   placeholder="Escribe la contraseña"
                                   autocomplete="current-password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" checked/>
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </button>
                    </div>

                    <!-- Links -->
                    <div class="text-center">
                        <p class="mb-0">
                            ¿No tienes cuenta?
                            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                                Registrate aqui
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>

        <!-- Demo Credentials (remove in production) -->
        <div class="card mt-3 bg-light">
            <div class="card-body">
                <h6 class="card-title">Usuarios de Prueba:</h6>
                <ul class="list-unstyled mb-0 small">
                    <li><strong>Admin:</strong> admin@businessschool.com / Admin123!</li>
                    <li><strong>Manager:</strong> manager.hr@businessschool.com / Manager456!</li>
                    <li><strong>Leader:</strong> leader.sports@businessschool.com / Leader456!</li>
                    <li><strong>Student:</strong> student05@businessschool.com / Student123!</li>
                </ul>
            </div>
        </div>
    </div>
</div>
